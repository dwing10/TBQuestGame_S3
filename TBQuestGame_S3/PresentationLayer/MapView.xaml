<Window x:Class="TBQuestGame_S1.PresentationLayer.MapView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TBQuestGame_S1.PresentationLayer"
        mc:Ignorable="d"
        Title="MapView" 
        Height="450" 
        Width="571"
        Background="Black">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/MundasMap.jpg" Stretch="Uniform"/>
        </Grid.Background>
        <Button 
            Grid.Column="2"
            Grid.Row="4"
            Margin="70,15,0,0"
            Content="Close"
            Height="50"
            Width="100"
            FontFamily="Blackadder ITC"
            FontSize="28"
            FontWeight="ExtraBold" Click="Button_Click"/>
    </Grid>
</Window>
